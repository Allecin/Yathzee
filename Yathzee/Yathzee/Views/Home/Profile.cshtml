@model Yathzee.Models.ProfileViewModel

@{
    ViewBag.Title = "My profile";
}

<h2 id="title">Profile: @Model.Name</h2>

<div>
    <hr />
    <fieldset>
        <legend>Player information</legend>
        <div class="row">
            <div class="col-md-6">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>

                    <dd id="nameNew">
                        @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Privacy)
                    </dt>

                    <dd id="newSettings">
                        @Html.DisplayFor(model => model.Privacy)
                    </dd>
                </dl>
            </div>
            <div id="editDiv" class="col-md-6" style="visibility:hidden">
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">New name: </label> <input type="text" id="newName" class="col-md-9 form-control">
                </div>
                <br />
                <div class="form-group">
                    <label class="col-md-3 control-label">New privacy settings: </label>
                    <div class="col-md-9">
                        <input id="rdbPrivate" class="radioButton" type="radio" name="privacy" value="Private">Private<br>
                        <input class="radioButton" type="radio" name="privacy" value="Global">Global<br>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <input type="button" id="edit" value="Edit profile" onclick="editProfile()" />
            </div>
            <br />
        </div>
        <div class="row">

        </div>
        <br />
         </fieldset>
    <fieldset>
        <legend>Game information</legend>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.GamesPlayed)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GamesPlayed)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.GamesWon)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.GamesWon)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MaxScore)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaxScore)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.AverageScore)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AverageScore)
            </dd>
        </dl>
        </fieldset>
    <fieldset>
        <legend>View other players profile</legend>
        <div class="form-group">
            <label class="col-md-3 control-label">Players email address: </label> <input type="text" id="emailAddress" class="col-md-9 form-control">
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-9">
                <input type="button" id="viewProfile" value="View profile" onclick="viewProfile()" />
            </div>
            <br />
        </div>
    </fieldset>
</div>
<br />
<div id="info" class="row">
    <div id="profileChangesSuccess" style="visibility:hidden" class="alert alert-success" role="alert">Profile changes saved succesfully.</div>
    <div id="profileChangesFail" style="visibility:hidden" class="alert alert-warning" role="alert">Internal problem: Coudn't change your profile..</div>
    <div id="invalidEmailAddress" style="visibility:hidden" class="alert alert-warning" role="alert">The email address isn't correct or the player doesn't want his profile seen.</div>
    <div id="Error" style="visibility:hidden" class="alert alert-warning" role="alert">Something went wrong.</div>
</div>
